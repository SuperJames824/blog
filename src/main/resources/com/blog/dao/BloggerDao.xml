<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.BloggerDao">

    <resultMap id="BloggerResult" type="Blogger">
        <id property="id" column="id"/>
        <result property="userName" column="username"/>
        <result property="passWord" column="password"/>
        <result property="nickName" column="nickName"/>
        <result property="sign" column="sign"/>
        <result property="proFile" column="proFile"/>
        <result property="imageName" column="imageName"/>
    </resultMap>


    <select id="find"  resultMap="BloggerResult">
		select * from t_blogger where id=1;
	</select>


    <select id="findByName" parameterType="String" resultType="Blogger">
        select * from t_blogger where username=#{username}
    </select>

    <select id="findAll" resultMap="BloggerResult">
        select * from t_blogger
    </select>

    <update id="update" parameterType="Blogger">
        update t_blogger
            <set>
                <if test="password!=null and password!='' ">
                    password=#{password},
                </if>
                <if test="nickName!=null and nickName!='' ">
                    nickName=#{nickName},
                </if>
                <if test="sign!=null and sign!='' ">
                    sign=#{sign},
                </if>
                <if test="proFile!=null and proFile!='' ">
                    proFile=#{proFile},
                </if>
                <if test="imageName!=null and imageName!='' ">
                    imageName=#{imageName},
                </if>
            </set>
            where id=1
    </update>

</mapper>